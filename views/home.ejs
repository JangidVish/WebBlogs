<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>HomePage</title>
</head>

<body class="bg-dark text-white">
    <%- include('./partials/nav') %>
        <div class="container m-3 ml-4 row row-cols-3">
            <% blogs.forEach(blog=> { %>
                <div class="col">

                    <div class="card mt-4" style="width: 18rem; ">
                        <img src=" <%=blog.coverImageUrl %>" class="" width="250px" height="200px"
                            style="align-self: center; border-radius: 10px; padding: 1px; ">
                        <div class="card-body">
                            <h5 class="card-title" style="border-top: 1px solid black; padding-top: 3px;">
                                <%= blog.title %>
                            </h5>
                            <a href="/blog/<%= blog._id %>" class="btn btn-primary">View More</a>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
        <%- include('./partials/scripts') %>
</body>

</html>