<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Blog </title>
</head>

<body class="bg-dark text-white">
    <%- include('./partials/nav') %>
        <div class="container mt-4">
            <h1>
                <%= blog.title %>
            </h1>
            <img src="<%= blog.coverImageUrl %> " class="card-img-top" width="500px" height="500px">
            <pre class="mt-3"><%= blog.desc %></pre>
        </div>
        <div class="container mt-4 mb-6">
            <img src="<%= blog.createdBy.profileImageUrl %>" width="70px" style="border-radius: 50%;" />
            <%= blog.createdBy.fullName %>
        </div>




        <div class="container mt-3 mb-4">
            <h1>Comments (<%= comments.length %>)</h1>
            <% if (locals.user) { %>
                <form action="/comment/<%= blog._id %>" method="post">
                    <div class="mb-3">
                        <input type="text" name="content" class="form-control" id="exampleInputEmail1"
                            aria-describedby="emailHelp" placeholder="Enter Your Comment!....">
                    </div>
                    <button type="submit" class="btn btn-primary">Add</button>
                </form>
                <% } else {%>
                    <div class="p-3 text-primary-emphasis bg-primary-subtle border border-primary-subtle rounded-3">
                        SignIn to Add a comment
                    </div>
                    <% } %>
        </div>

        <div class="container mt-3">
            <% comments.forEach(comment=> { %>
                <div class="">
                    <img src="<%= comment.createdBy.profileImageUrl %>" width="40px" style="border-radius: 50%;" />
                    <%= blog.createdBy.fullName %>:
                        <pre><%= comment.content %></pre>

                </div>
                <% }) %>
        </div>

        <%- include('./partials/scripts') %>
</body>

</html>